{
    "name": "Remove distraction and stay focused",
    "description": "Remove distraction and stay focused. Be more productive",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "scripting",
        "activeTab",
        "tabs",
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "./options/index.html",
    "action": {
        "default_title": "Focus"
    },
    "web_accessible_resources": [
       {
           "resources": ["/images/focus.jpg"],
           "matches": ["<all_urls>"],
           "extension_ids": ["ledfkfapijlddkhdhjhpdfgdpagcpplg"]
       } 
    ]
}